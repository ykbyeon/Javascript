            opacity: 0.5,
            type: 'scatter3d',
            x: getrandom(50, 100),
            y: getrandom(50, 100),
            z: getrandom(50, 100),
          }
        ];
        var layout = {
          scene: {
            aspectmode: "manual",
            aspectratio: {
              x: 1, y: 0.7, z: 1,
            },
            xaxis: {
              nticks: 9,
              range: [-200, 100],
